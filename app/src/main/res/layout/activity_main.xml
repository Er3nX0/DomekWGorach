<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Domek w górach"
        android:textSize="25dp"
        android:padding="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/obraz"
        android:padding="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        android:layout_marginTop="0dp">

        <Button
            android:id="@+id/polub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/teal"
            android:text="POLUB"
            app:cornerRadius="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/usun"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/teal"
            android:text="USUŃ"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/zapisz"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/teal"
            android:text="ZAPISZ"
            app:cornerRadius="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/polubienia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 polubień"
        android:layout_gravity="end"
        android:textSize="15dp"
        android:paddingTop="5dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Opis"
        android:padding="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Odwiedź komfortowy domek w Sudetach, blisko do szlaków turystycznych"
        android:textColor="@color/grey"
        android:padding="5dp" />
</LinearLayout>





